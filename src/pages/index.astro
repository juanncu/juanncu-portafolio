---
import Footer from '../components/Footer.astro';
import SubtitleContact from '../components/Home/SubtitleContact.astro'
import Contact from '../components/Home/Contact.astro'
import TimeLineExperience from '../components/Home/TimeLineExperience.astro';
import ProjectsHome from '../components/Home/ProjectsHome.astro';
import About from '../components/Home/About.astro';
import Techs from '../components/Home/Techs.astro';
import Hero from '../components/Home/Hero.astro'
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
import '@fontsource-variable/syne';
import NavbarMobile from '../components/NavbarMobile.astro';
---

<Layout title="Juan Antonio Cu - Desarrollador Frontend e ingeniero informático">
	<!-- encabezado -->
	<header id="inicio" class="flex flex-col items-center max-w-[1310px] min-w-full px-2">
		<Navbar/>
		<Hero/>
	</header>
	<!-- CONTENT MAIN -->
	<main class="flex flex-col items-center min-w-full px-3">
		<!-- tecnologias -->
		<section class="max-w-[1310px] w-full flex flex-col gap-11 mt-[80px] sm:mt-[220px]">
			<Techs/>
		</section>
		<!-- ABOUT -->
		 <section class="max-w-[1310px] w-full flex flex-col items-center gap-11 pt-[120px] sm:pt-[140px]" id="sobremi">
			<h3 class="font-semibold text-4xl sm:text-5xl duration-300">Sobre mi</h3>
			<About/>
		 </section>
		 <!-- PROJECTS -->
			<section class="max-w-[1310px] w-full flex flex-col items-center gap-11 pt-[120px] sm:pt-[140px]" id="proyectoshome">
				<h3 class="font-semibold text-center text-4xl sm:text-5xl duration-300 leading-[50px]">Proyectos seleccionados</h3>
				<ProjectsHome/>
			</section>
			<!-- EXPERIENCE -->
			<section class="max-w-[1310px] w-full flex flex-col items-center gap-11 pt-[120px] sm:pt-[140px]" id="experiencia">
				<h3 class="font-semibold text-4xl sm:text-5xl duration-300">Experiencia</h3>
				<TimeLineExperience/>
			</section>
			<!-- CONTACT -->
			<section class="max-w-[1310px] w-full flex flex-col items-center gap-11 pt-[130px] sm:pt-[150px]" id="contacto">
				<div class="w-full text-center flex flex-col items-center gap-4">
					<SubtitleContact/>					
					<h3 class="font-semibold text-4xl sm:text-5xl duration-300 leading-[50px] sm:leading-[70px]">¿Tienes un proyecto en mente? <br>
						Escríbeme<span class="text-green-lime">.</span></h3>
				</div>
				<Contact/>
			</section>
	</main>
	<Footer/>
</Layout>

