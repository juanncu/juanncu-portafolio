---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '@fontsource/poppins';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Juan Antonio Cu - Desarrollador Backend e Ingeniero Informático." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/iconoUser.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:type" content="website">
		<title>{title}</title>
		<meta property="og:title" content={title}>
		<meta property="og:description" content="Juan Antonio Cu - Desarrollador Backend e Ingeniero Informático.">
		<meta property="og:image" content="https://i.imgur.com/z0d4ECl.png">
		<meta property="og:image:width" content="1200">
		<meta property="og:image:height" content="630">
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		scroll-behavior: smooth;
		--primary-color: #101511;
		--secondary-color: #191F1F;
		--terciary-color: #23282D;
		--green-lime: #B5EF77;
		--color-text2: #BEBEBE;
	}
	html {
		font-family: 'Poppins', sans-serif;
		background: var(--primary-color);
		/* overflow: hidden; */
		/* background-size: 224px; */
	}

	.label:hover .tooltip {
		opacity: 1;
		pointer-events: auto;
	}
	
</style>
