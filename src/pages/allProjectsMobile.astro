---
import FilterProjects from "../components/AllProjects/FilterProjects.astro";
import CardProject from "../components/CardProject.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import '@fontsource-variable/syne';
---

<Layout title="Todos Los Proyectos - Fullstack">
  <header class="flex flex-col items-center">
		<Navbar/>
	</header>
  <main class="flex flex-col items-center min-w-full pt-32 sm:pt-44 px-3">
    <!-- titulo -->
    <h4 class="font-semibold text-4xl sm:text-5xl max-w-[1310px] w-full text-center">Todos mis trabajos.</h4>
    <!-- filtro -->
    <FilterProjects 
    classestodo="px-5 py-1 sm:px-7 sm:py-2 bg-secondary-color border font-syne font-semibold text-white border-terciary-color rounded-full hover:bg-terciary-color hover:text-green-lime hover:border-terciary-color duration-300"
    classesback="px-5 py-1 sm:px-7 sm:py-2 bg-secondary-color border font-syne font-semibold text-white border-terciary-color rounded-full hover:bg-terciary-color hover:text-green-lime hover:border-terciary-color duration-300"
    classesfull="px-5 py-1 sm:px-7 sm:py-2 bg-terciary-color border font-syne font-semibold text-green-lime border-green-lime rounded-full hover:bg-terciary-color hover:text-green-lime hover:border-terciary-color duration-300"
    classesfront="px-5 py-1 sm:px-7 sm:py-2 bg-secondary-color border font-syne font-semibold text-white border-terciary-color rounded-full hover:bg-terciary-color hover:text-green-lime hover:border-terciary-color duration-300"
    />
    <!-- cards -->
    <div class="max-w-[1310px] w-full grid gap-5 grid-cols-1 mmd:grid-cols-4 mt-9">
      <CardProject tech1="Kotlin" tech2="XML" tech3="Android", linkPagina="infoProject/infoProjectAppBancoUI" title="App para hacer ejercicio" text="Aplicación móvil nativa para el sistema operativo android desarrollada para llevar un control de la actividad física realizada por el usuario." img1="https://i.imgur.com/CYXnjq5.png" img2="https://i.imgur.com/CYXnjq5.png" cargo="Móvil"/> 
      <CardProject tech1="Kotlin" tech2="Compose" tech3="Android", linkPagina="infoProject/infoProjectAppEjercicio" title="App de Banco UI" text="Aplicación móvil nativa para el sistema operativo android que simula una aplicación de banco, desarrollada para practicar el uso de Jetpack Compose." img1="https://i.imgur.com/vaDKkEc.png" img2="https://i.imgur.com/vaDKkEc.png" cargo="Móvil"/>
    </div>
  </main>
  <Footer/>
</Layout>